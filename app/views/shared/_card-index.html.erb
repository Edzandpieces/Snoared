<div class="cards">
  <% @gears.each do |gear| %>
    <div class="cards-index d-flex flex-column">
      <%= link_to "", new_gear_booking_path(gear.id) %>
      <%= image_tag gear.img_url %>

      <h2><%= gear.title %></h2>
      <div class="d-flex align-items-center">
        <h2>Owner: <%= gear.user.first_name %> <%= gear.user.last_name %></h2>
        <% if defined? gear.user.account.photo.key %>
          <%= cl_image_tag gear.user.account.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% else %>
          <%= image_tag 'avatar.png', class: "avatar dropdown-toggle ms-3 mb-3", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% end %>
      </div>
      <p><%= gear.description.split.first(29).join(" ") + "..." %></p>
      <div class="location-fontawesome d-flex">
        <i class="fas fa-map-marked-alt me-3"></i>
        <h2><strong><%= gear.address.split.first.gsub(",","") %></strong></h2>
      </div>
      <div class="price-fontawesome d-flex">
        <i class="fas fa-money-bill-wave me-3"></i>
        <h2 class="mt-auto price"><%="Â¥#{gear.price.to_i} /day" %></h2>
      </div>
    </div>
  <% end %>
</div>
