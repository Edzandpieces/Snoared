<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "SNOARED - logo.png", size: '10x70' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <nav class="my-2 my-md-0 mr-md-3">
          <%= link_to "Home", gears_path, class: "p-2 text-dark" %>
          <%= link_to "My Booking", bookings_path, class: "p-2 text-dark" %>
          <% if current_user.roles.where(name: "admin").any? %>
            <%= link_to "All Booking", admin_bookings_path, class: "p-2 text-dark" %>
          <% end %>
          <% if current_user.roles.where(name: "owner").any? %>
            <%= link_to "Add Gear", new_gear_path, class: "p-2 text-dark" %>
          <% end %>
        </nav>

        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <button type="button" class="btn btn-outline-light"><%= link_to "Login", new_user_session_path, class: "nav-link" %></button>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
