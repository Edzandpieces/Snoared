<div class="container">
  <div class="card-show">
    <div class="card">
      <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" alt=""> %>
      <%= image_tag @gear.img_url, alt: "gear" %>
      <div class="card-info">
        <h1><%= @gear.title %></h1>
        <p><%= @gear.description %></p>
        <p><%= @gear.address %></p>
        <p><%= @gear.price %></p>
      </div>
    </div>
    <div class="form">
      <h2 class="mt-3 mb-5">￥<%= @gear.price %>   day</h2>
      <%= render 'gears/form' %>
      <hr>
      <p>￥<%= @gear.price %>x days</p>
      <h2>Total   ￥<%= @gear.price %></h2>
    </div>
  </div>
</div>
