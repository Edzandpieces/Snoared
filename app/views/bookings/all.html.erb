<div class="container-fluid col-10">
  <div class="card-product">
    <h1>All Bookings</h1>
    <div class="row my-3 m-2">
      <% @bookings.each do |booking| %>
        <div class="col-md-6 px-3 d-flex align-self-stretch">
          <div class="row border rounded mb-4 shadow-sm position-relative d-flex bg-white">
            <div class="col p-4 d-flex flex-column position-static">
              <p>Your booking is for <%= booking.gear.title %></p>
              <p>Reservation date: <strong><%= booking.start_date%></strong> to <strong><%= booking.end_date %></strong></p>
              <p>Your booking is currently <strong><%= booking.status %></strong></p>
            </div>

            <div class="col-auto p-3">
              <%= image_tag booking.gear.img_url, width: "200", height: "250" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
