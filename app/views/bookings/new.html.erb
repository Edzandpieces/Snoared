<div data-controller="calculation" class="container">
  <div class="card-show">
    <div class="card p-5">
      <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" alt=""> %>
      <%= image_tag @gear.img_url, alt: "gear" %>
      <div class="card-info mt-5">
        <h1><%= @gear.title %></h1>
        <p class="mt-3"><%= @gear.description %></p>
        <h4 class="blockquote-footer mt-3"><%= @gear.address %></h4>
        <h2>￥<%= @gear.price %>/day</h2>
      </div>
    </div>
    <div class="form">
      <h2 class="mt-3 mb-5" >￥<%= @gear.price %>   /day</h2>
      <%# <%= render 'bookings/form' %>
      <%= simple_form_for [@gear, @booking] do |f| %>
        <%= f.input :start_date, html5: true, input_html: { data: {calculation_target:"startDay", action: "change->calculation#calculate"} } %>
        <%= f.input :end_date, html5: true, input_html: { data: {calculation_target:"endDay", action: "change->calculation#calculate"} } %>
        <%= f.submit class:'btn btn-danger btn-lg text-light mb-3 mt-3 active'%>
      <% end %>
      <hr>
      <p data-calculation-target="price"><%= @gear.price %></p>
      <h2>Total ￥<span data-calculation-target="total"><%= @gear.price %></span></h2>
    </div>
  </div>
</div>
